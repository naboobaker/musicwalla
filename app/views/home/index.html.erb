<div class="row">

  <div class="hero-unit span9 offset1 thumbnail">
    <script>
      initAudio();
    </script>
    <div id="song_info"></div>
    
    <br>

    <div id="song_time"></div>

    <br>

    <div class="progress">
        <div id="progress_bar" class="bar"></div>
    </div>

    <div class="row">
      <div class="span4" id="player_controls" class="btn-group">
        <a class="btn" id="play_pause" onclick="audioPlayer_playPause()"><i class="icon-pause"></i></a>
        <a class="btn" id="next_song" onclick="audioPlayer_nextSong()"><i class="icon-step-forward"></i></a>
        <a class="btn" id="next_playlist" onclick="audioPlayer_nextPlaylist()"><i class="icon-fast-forward"></i></a>
      </div>
      <div class="span2 offset3" id="song_message"></div>
    </div>

    <div id="audio_player"></div>
  </div>
</div>

<br>
<br>

<div class="row">
  <div class="span4 offset1">
    <h1>Current Playlist</h1>
  </div>
  <div class="span4 offset2">
    <h1>Playlist Queue</h1>
  </div>
</div>

<br>

<div class="row">
  <div class="span4 offset1">
    <script>
      initNowPlaying();
    </script>
    <table class="table table-striped" id="now-playing">
    </table>
  </div>

  <div class="span4 offset2">
    <script>
      initPlaylistQueues();
    </script>
    <table class="table table-striped" id="playlist-queues"/>
  </div>
</div>
